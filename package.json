{
  "name": "devx360",
  "version": "1.0.0",
  "description": "DevX360 - Enterprise Software Solutions Portfolio Website",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "concurrently \"node --watch app.js\" \"npm run css:watch\"",
    "build": "npm run css:build",
    "css:build": "./node_modules/.bin/tailwindcss -i ./src/input.css -o ./public/css/styles.css --minify",
    "css:watch": "./node_modules/.bin/tailwindcss -i ./src/input.css -o ./public/css/styles.css --watch"
  },
  "keywords": [
    "express",
    "portfolio",
    "enterprise",
    "software"
  ],
  "author": "DevX360",
  "license": "ISC",
  "dependencies": {
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-ejs-layouts": "^2.5.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
