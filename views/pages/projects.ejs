<!-- Projects Hero Section -->
<section class="section">
    <div class="container">
        <div class="section-header animate-on-scroll">
            <span class="code-comment">// import { projects } from '@devx360/portfolio'</span>
            <h1 class="section-title">Our Work</h1>
            <p class="section-subtitle">Real results for real businesses. Explore our case studies.</p>
        </div>

        <!-- Quick stats for business context -->
        <div class="projects-stats animate-on-scroll">
            <div class="project-stat">
                <span class="stat-value">50+</span>
                <span class="stat-label">Projects Delivered</span>
            </div>
            <div class="project-stat">
                <span class="stat-value">95%</span>
                <span class="stat-label">Client Retention</span>
            </div>
            <div class="project-stat">
                <span class="stat-value">12</span>
                <span class="stat-label">Industries Served</span>
            </div>
        </div>
    </div>
</section>

<!-- Projects Grid Section -->
<section class="section">
    <div class="container">
        <div class="projects-hybrid-grid">
            <% projects.forEach((project, index) => { %>
                <a href="/projects/<%= project.slug %>" class="project-hybrid-card animate-on-scroll">
                    <!-- Visual card for business readers -->
                    <div class="project-card-visual">
                        <div class="project-card-header">
                            <span class="project-category"><%= project.category || 'Software Development' %></span>
                        </div>
                        <h3 class="project-card-title"><%= project.title %></h3>
                        <p class="project-card-description"><%= project.description %></p>
                        <div class="project-card-highlights">
                            <% if (project.results && project.results.length > 0) { %>
                                <span class="project-highlight">✓ <%= project.results[0] %></span>
                            <% } %>
                        </div>
                        <div class="project-card-tech">
                            <% if (project.technologies && project.technologies.length > 0) { %>
                                <% project.technologies.slice(0, 4).forEach((tech) => { %>
                                    <span class="tech-badge"><%= tech %></span>
                                <% }) %>
                            <% } %>
                        </div>
                        <span class="project-card-cta">View Case Study →</span>
                    </div>

                    <!-- Code block for technical readers -->
                    <div class="project-card-code">
                        <div class="code-block-mini">
                            <div class="code-block-header">
                                <span class="code-block-filename">project_<%= String(index + 1).padStart(2, '0') %>.ts</span>
                            </div>
                            <div class="code-block-body">
                                <pre><span class="syntax-keyword">export</span> { <span class="syntax-variable"><%= project.slug.replace(/-/g, '_') %></span> }</pre>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section cta-section">
    <div class="container">
        <div class="cta-hybrid animate-on-scroll">
            <div class="cta-message">
                <h2 class="cta-title">Have a Project in Mind?</h2>
                <p class="cta-text">
                    Let's discuss how we can help bring your vision to life.
                    Every great project starts with a conversation.
                </p>
                <div class="cta-buttons">
                    <a href="/contact" class="btn btn-primary">Start a Conversation</a>
                </div>
            </div>
            <div class="cta-code-wrapper">
                <div class="code-block">
                    <div class="code-block-header">
                        <span class="code-block-filename">new_project.sh</span>
                    </div>
                    <div class="code-block-body">
                        <pre><span class="syntax-keyword">$</span> <span class="syntax-function">devx360</span> project --new
<span class="syntax-type">[✓]</span> <span class="syntax-string">Ready to start</span></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

